<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_header_content"
        android:id="@+id/details_layout_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"/>
    <WebView
        android:id="@+id/details_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/details_layout_header"></WebView>
    <ImageView
        android:id="@+id/details_iv_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/details_icon_tip"/>
</RelativeLayout>